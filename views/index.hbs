<html>
<head>
    <title>
        Smartest Trip Planner
    </title>
    <link rel="stylesheet" href="/css/ink.min.css"/>
    <link rel="stylesheet" href="/css/style.css"/>
    <link rel="stylesheet" href="/css/select_city.css"/>
</head>
<body>
{{>header}}
<div class="home_page_cont">
    <h1 class="home_page_hero_hd">Trip Planner</h1>
    <div class="home_page_hero_form">
        <div id="my-carousel-1" class="ink-carousel" data-pagination="#my-carousel-1-pagination">
            <ul class="stage column-group half-gutters">
                <li class="slide xlarge-100 large-100 medium-100 small-100 tiny-100">
                    <div class="home home_page_form_sec_one">
                        <h4 class="home_page_sub_hd">Select Trip Purpose</h4>
                        <ul class="interest_list_group">
                            <li class="interest_opt_cont js_trip_purpose_opt">
                                <img src="/image/home/road_trip_icon.jpg"/>
                                <h3>Road Trip</h3>
                            </li>
                            <li class="interest_opt_cont js_trip_purpose_opt">
                                <img src="/image/home/pilgrimage_icon.png"/>
                                <h3>Temple / Pilgrimage</h3>
                            </li>
                        </ul>
                    </div>
                </li>
                <li class="slide xlarge-100 large-100 medium-100 small-100 tiny-100">
                    <div class="home_page_form_sec holidays_count">
                        <h4 class="home_page_sub_hd">Total no of Holidays</h4>
                        <div class="input-group-btn">
                            <button type="button" class="holidays_count_minus btn-number" data-type="minus"
                                    data-field="quant[2]">
                                <span class="minus_icon"> - </span>
                            </button>
                        </div>
                        <input type="text" name="quant[2]" class="holidays_count_input input-number" value="3" min="1"
                               max="100">
                        <div class="input-group-btn">
                            <button type="button" class="holidays_count_plus btn-number" data-type="plus"
                                    data-field="quant[2]">
                                <span class="plus_icon"> + </span>
                            </button>
                        </div>
                    </div>
                </li>
                <li class="slide xlarge-100 large-100 medium-100 small-100 tiny-100">
                    <div class="cd-bouncy-nav-modal">
                        <nav>
                            <ul class="cd-bouncy-nav js_city_list">
                                <li>
                                    <a href="#0" class="js_select_city">Bangalore</a>
                                </li>
                                <li>
                                    <a href="#0" class="js_select_city">Goa</a>
                                </li>
                                <li>
                                    <a href="#0" class="js_select_city">Mumbai</a>
                                </li>
                                <li>
                                    <a href="#0" class="js_select_city">Delhi</a>
                                </li>
                                <li>
                                    <a href="#0" class="js_select_city">Kolkata</a>
                                </li>
                                <li>
                                    <a href="#0" class="js_select_city">Chennai</a>
                                </li>
                            </ul>
                        </nav>

                        <a href="#0" class="cd-close">Close modal</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="holidays_nav_sec hide js_form_nav" data-curr-index="0">
            <button class="holidays_nav_btn left js_form_back">Back</button>
            <button class="holidays_nav_btn right js_form_next">Next</button>
        </div>
    </div>
</div>

<nav id="my-carousel-1-pagination" class="ink-navigation home_page_form_car">
    <ul class="pagination black">
    </ul>
</nav>

{{>footer}}
<script src="/js/jquery-2.2.4.min.js"></script>
<script type="text/javascript" src="/js/ink-all.min.js"></script>
<script type="text/javascript" src="/js/modernizr.js"></script>
<script type="text/javascript" src="/js/number-input.js"></script>
<script type="text/javascript" src="/js/home-page-form.js"></script>

<script type="text/javascript">
    Ink.requireModules(['Ink.UI.Carousel_1'], function (InkCarousel) {
        new InkCarousel('#my-carousel-1', {pagination: '#my-carousel-1-pagination'});
    });
</script>
</body>
</html>
